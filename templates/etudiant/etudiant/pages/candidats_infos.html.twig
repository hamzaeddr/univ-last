<div style="margin-left:30px">
    <div class="col-md-3">
        <div class="form-group">
            <label>  Nom (*) :</label>
            <input class="form-control" type="text" name="nom" placeholder="Nom" value="{{etudiant.nom}}"> 
        </div>
    </div> 

    <div class="col-md-3">
        <div class="form-group">
            <label>  Prénom (*) :</label>
            <input class="form-control" type="text" name="prenom" placeholder="Prénom" value="{{etudiant.prenom}}"> 
        </div>
    </div>

    <div class="col-md-3">
        <div class="form-group">
            <label>  Date de Naissance (*) :</label>
            <input class="form-control datepicker" type="date" name="date_naissance" placeholder="Date de Naissance" value="{{etudiant.dateNaissance | date('Y-m-j')}}">
        </div>
    </div> 
    
    <div class="col-md-3">
        <div class="form-group">
            <label>  Lieu de naissance (*) :</label>
            <input class="form-control" type="text" name="lieu_naissance" placeholder="Lieu de naissance" value="{{etudiant.lieuNaissance}}">
        </div>
    </div> 
    
    <div class="col-md-3">
        <div class="form-group">
            <label> Sexe (*) :</label><br>    
            {% if etudiant.sexe == 'homme' %}
                <input type="radio" name="sexe" id="homme" value="homme" checked=""> 
                <label style="margin: 10px 10px 0px 0px;"  for="homme"> Homme </label>
                <input type="radio" name="sexe" id="femme" value="femme"> 
                <label style="margin: 10px 10px 0px 5px;" for="femme"> Femme </label> 
            {% else %}
                <input type="radio" name="sexe" id="homme" value="homme"> 
                <label style="margin: 10px 10px 0px 0px;"  for="homme"> Homme </label>
                <input type="radio" name="sexe" id="femme" value="femme" checked=""> 
                <label style="margin: 10px 10px 0px 5px;" for="femme"> Femme </label>
            {% endif %}
        </div>
    </div>
    
    <div class="col-md-3">
        <div class="form-group">
            <label>  Situation Familiale  (*) :</label>
            <select class="form-control " style="width: 100%" name="st_famille">
                <option value="" disabled selected>Choix de situation</option>
                    {% for situation in situations %}
                        {% if etudiant.stFamille == situation  %}
                            <option value="{{situation.id}}" selected>{{situation.designation}}</option>
                        {% else %}
                            <option value="{{situation.id}}">{{situation.designation}}</option>
                        {% endif %}
                    {% endfor %}
            </select>
        </div>
    </div>
    
    <div class="col-md-3">
        <div class="form-group">
            <label>  Nationalite (*) :</label>
            {# <input class="form-control" type="text" name="nationalite" placeholder="Nationalite" value="{{etudiant.nationalite}}">  #}
            {% include 'inc/nationalite.html.twig' %} 
        </div>
    </div> 
    
    <div class="col-md-3">
        <div class="form-group">
            <label>  C.I.N (*) :</label>
            <input class="form-control" type="text" name="cin" placeholder="C.I.N" value="{{etudiant.cin}}"> 
        </div>
    </div> 

    <div class="col-md-3">
        <div class="form-group">
            <label>  Passeport :</label>
            <input class="form-control" type="text" name="passeport" placeholder="Passeport" value="{{etudiant.passeport}}"> 
        </div>
    </div> 
    
    <div class="col-md-3">
        <div class="form-group">
            <label>  Ville (*) :</label>
            <input class="form-control" type="text" name="ville" placeholder="Ville" value="{{etudiant.ville}}"> 
        </div>
    </div> 
    
    <div class="col-md-3">
        <div class="form-group">
            <label>  Téléphone Etudiant (*) :</label>
            <input class="form-control" type="text" name="tel1" placeholder="Téléphone Etudiant" value="{{etudiant.tel1}}"> 
        </div>
    </div> 
    
    <div class="col-md-3">
        <div class="form-group">
            <label>  Téléphone Pere (*) :</label>
            <input class="form-control" type="text" name="tel2" placeholder="Téléphone Pere" value="{{etudiant.telPere}}"> 
        </div>
    </div> 
    
    <div class="col-md-3">
        <div class="form-group">
            <label>  Téléphone Mere (*) :</label>
            <input class="form-control" type="text" name="tel3" placeholder="Téléphone Mere" value="{{etudiant.telmere}}"> 
        </div>
    </div> 
    
    <div class="col-md-3">
        <div class="form-group">
            <label>  Mail 1 (*) :</label>
            <input class="form-control" type="text" name="mail1" placeholder="Mail 1" value="{{etudiant.mail1}}"> 
        </div>
    </div> 
    
    <div class="col-md-3">
        <div class="form-group">
            <label>  Mail 2 :</label>
            <input class="form-control" type="text" name="mail2" placeholder="Mail 2" value="{{etudiant.mail2}}"> 
        </div>
    </div> 
    
    <div class="col-md-6">
        <div class="form-group">
            <label>  Adresse :</label>
            <textarea class="form-control" name="adresse" style="width: 100%; height: 32px;">{{etudiant.adresse}}</textarea>
        </div>
    </div> 
</div>   
<div style="margin-left:30px">
    <div class="col-md-3">
        <div class="form-group">
            <label>  Nom (*) :</label>
            <input class="form-control" type="text" name="nom" placeholder="Nom" value=""> 
        </div>
    </div> 

    <div class="col-md-3">
        <div class="form-group">
            <label>  Prenom (*) :</label>
            <input class="form-control" type="text" name="prenom" placeholder="Prenom" value=""> 
        </div>
    </div>

    <div class="col-md-3">
        <div class="form-group">
            <label>  Date de naissance (*) :</label>
            <input class="form-control datepicker" type="date" name="date_naissance" placeholder="Date Naissance" value="">
        </div>
    </div> 
    
    <div class="col-md-3">
        <div class="form-group">
            <label>  Lieu de naissance (*) :</label>
            <input class="form-control" type="text" name="lieu_naissance" placeholder="Lieu de naissance" value="">
        </div>
    </div> 
    
    <div class="col-md-3">
        <div class="form-group">
            <label> Sexe (*) :</label><br>    
            <input type="radio" name="sexe" id="homme" value="homme" checked=""> 
            <label style="margin: 10px 10px 0px 0px;"  for="homme"> Homme </label>
            <input type="radio" name="sexe" id="femme" value="femme"> 
            <label style="margin: 10px 10px 0px 5px;" for="femme"> Femme </label>
        </div>
    </div>
    
    <div class="col-md-3">
        <div class="form-group">
            <label>  Situation familiale (*) :</label>
            <select class="form-control " style="width: 100%" name="st_famille">
                <option value="" disabled selected>Choix de situation</option>
                    {% for situation in situations %}
                        <option value="{{situation.id}}">{{situation.designation}}</option>
                    {% endfor %}
            </select>
        </div>
    </div> 
    
    <div class="col-md-3">
        <div class="form-group">
            <label>  Nationalite (*) :</label>
            {% include 'inc/nationalite.html.twig' %} 
            {# <input class="form-control" type="text" name="nationalite" placeholder="Nationalite" value="">  #}
        </div>
    </div> 
    
    <div class="col-md-3">
        <div class="form-group">
            <label>  C.I.N (*) :</label>
            <input class="form-control" type="text" name="cin" placeholder="C.I.N" value=""> 
        </div>
    </div> 

    <div class="col-md-3">
        <div class="form-group">
            <label>  Passeport :</label>
            <input class="form-control" type="text" name="passeport" placeholder="Passeport" value=""> 
        </div>
    </div> 
    
    <div class="col-md-3">
        <div class="form-group">
            <label>  Ville (*) :</label>
            <input class="form-control" type="text" name="ville" placeholder="Ville" value=""> 
        </div>
    </div> 
    
    <div class="col-md-3">
        <div class="form-group">
            <label>  Telephone Etudiant (*) :</label>
            <input class="form-control" type="text" name="tel1" placeholder="Telephone Etudiant" value=""> 
        </div>
    </div> 
    
    <div class="col-md-3">
        <div class="form-group">
            <label>  Telephone pere (*) :</label>
            <input class="form-control" type="text" name="tel2" placeholder="Telephone Pere" value=""> 
        </div>
    </div> 
    
    <div class="col-md-3">
        <div class="form-group">
            <label>  Telephone Mere (*) :</label>
            <input class="form-control" type="text" name="tel3" placeholder="Telephone Mere" value=""> 
        </div>
    </div> 
    
    <div class="col-md-3">
        <div class="form-group">
            <label>  Mail 1 (*) :</label>
            <input class="form-control" type="text" name="mail1" placeholder="Mail 1" value=""> 
        </div>
    </div> 
    
    <div class="col-md-3">
        <div class="form-group">
            <label>  Mail 2 :</label>
            <input class="form-control" type="text" name="mail2" placeholder="Mail 2" value=""> 
        </div>
    </div> 
    
    <div class="col-md-6">
        <div class="form-group">
            <label>  Adresse :</label>
            <textarea class="form-control" name="adresse" placeholder="Adresse" style="width: 100%; height: 32px;"></textarea>
        </div>
    </div> 
</div>   
{% extends 'base.html.twig' %}

{% block title %}Univ - Epreuve{% endblock %}


{% block body %}
<div class="main-content">
    <section class="section">
        <div class="section-header">
          <h1>Evaluation Des Epreuves</h1>
          <div class="section-header-breadcrumb">
              {% for operation in operations %}
                <button class="{{operation.classTag}}" id="{{operation.idTag}}"><i class="{{operation.icon}}"></i>  {{operation.designation}}</button>
              {% endfor %}
              <a href="#" class="btn btn-primary ml-1" id="get_list_etudiant"><i class="fas fa-search" ></i>  Recherche</a>

          </div>
        </div>

        <div class="section-body">
        <div class="card">
            <div class="card-header">
                <ul class="nav nav-pills">                
                    <li class="nav-item mr-2">
                        <a href="#normal" class="nav-link active">Session normal</a>
                    </li>
                    <li class="nav-item">
                        <a href="#rattrapage" class="nav-link">Session rattrapage</a>
                    </li>                
                </ul>
            </div>
            <div class="card-body">
            <div class="card-search" style="margin-bottom: 1.5rem;">
                    <div class="row">
                        <div class="col-md-2">
                            <label for="etablissement">Etablissement:</label>
                            <select class="form-control" name="etablissement" id="etablissement">
                                <option value="">Choix etablissement</option>
                                {% for etablissement in etablissements %}
                                    <option value="{{etablissement.id}}">{{etablissement.designation}}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label for="formation">Formation:</label>
                            <select class="form-control" name="formation" id="formation">
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label for="promotion">Promotion:</label>
                            <select class="form-control" name="promotion" id="promotion">
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label for="semestre">Semestre:</label>
                            <select class="form-control" name="semestre" id="semestre">
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label for="module">Module:</label>
                            <select class="form-control" name="module" id="module">
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label for="element">Element:</label>
                            <select class="form-control" name="element" id="element">
                            </select>
                        </div>
                        
                      
                    </div>
                    <div class="row">
                        <div class="col-md-2">
                            <label for="nepreuve">Nature Epreuve:</label>
                            <select class="form-control" name="nepreuve" id="nepreuve">
                                <option value="">Choix nature epreuve</option>
                                {% for natureEpreuve in natureEpreuves %}
                                    <option value="{{natureEpreuve.id}}">{{natureEpreuve.designation}}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label for="order">Order By:</label>
                            <select class="form-control"  name="order" id="order" >
                                <option value="0">Choix Order (optionnel)</option>
                                <option value="1"> De A à Z</option>
                                <option value="2"> De Z à A</option>
                                <option value="3"> De 20 à 0</option>
                                <option value="4"> De 0 à 20</option>
                                
                            </select>
                        </div>

                        <div class="col-md-2">
                            
                        </div>
                    </div>
                </div>
                <table id="list_epreuve_normal"  class="table table-striped" style="width:100%">
                </table>
            </div>
            
        </div>
        </div>
    </section>
</div>



<!--Modal Import Group-->
{% include 'evaluation/epreuve/modals/affilier.html.twig' %}
{% include 'evaluation/epreuve/modals/import.html.twig' %}
{% include 'evaluation/epreuve/modals/imprimer.html.twig' %}

{% endblock %}


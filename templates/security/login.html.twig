<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

	{{ encore_entry_link_tags('login') }}
	<script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.24.0/axios.min.js"></script>
	{{ encore_entry_script_tags('login') }}
	<link rel="apple-touch-icon" sizes="180x180" href="{{asset('assets/img/favicon/apple-touch-icon.png')}}">
	<link rel="icon" type="image/png" sizes="32x32" href="{{asset('assets/img/favicon/favicon-32x32.png')}}">
	<link rel="icon" type="image/png" sizes="16x16" href="{{asset('assets/img/favicon/favicon-16x16.png')}}">
	<link rel="manifest" href="{{asset('assets/img/favicon/site.webmanifest')}}">
	<title>Univ - Login</title>
</head>
<body>
	<div class="login">
		<h2>
			{% set currentHour = 'now'|date('H') %}

			{# {{dump(currentHour)}} #}
			{% if currentHour in range(8,17) %} 
				Bonjour !
			{% else %}
				Bonsoir !
			{% endif %}
		</h2>
		<div class="container" id="container">
			<div class="form-container sign-up-container">
				<form id="singup">
					<h1>Crée un compte</h1>
					
					<span class="singup__error"></span>
					<span class="singup__success"></span>
		
					<input type="text" id="singup_username" placeholder="Username" required/>
					<input type="email" id="singup_email" placeholder="Email" />
					<input type="text" id="singup_nom" placeholder="Nom" required/>
					<input type="text" id="singup_prenom" placeholder="Prenom" required/>
					<input type="password" id="singup_password" placeholder="Mot de passe" required/>
					<input type="password" id="singup_cpassword" placeholder="Confirme le mot de passe" required/>
					<button type="submit">Crée</button>
				</form>
				{# <span class="footer" >FCZ - MTSI - Solutions Universitaires</span> #}

			</div>
			<div class="form-container sign-in-container">
				<form method="post">
					<h1>Connexion</h1>
					{% if error %}
						<div class="login__error">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
					{% endif %}
					
					<input value="{{ last_username }}" name="username" placeholder="Username" />
					<input type="password" name="password" id="inputPassword" placeholder="Password" />
					<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
					{# <a href="#">Forgot your password?</a> #}
					<button type="submit">Connexion</button>
				</form>
				<span class="footer" >FCZ - MTSI - Solutions Universitaires</span>
			</div>
			<div class="overlay-container">
				<div class="overlay">
					<div class="overlay-panel overlay-left">
						{# <h1>Welcome Back!</h1>
						<p>To keep connected with us please login with your personal info</p> #}
						<button class="ghost" id="signIn">Connexion</button>
					</div>
					<div class="overlay-panel overlay-right">
						{# <h1>Creation de compte</h1> #}
						{# <p>Enter your personal details and start journey with us</p> #}
						<button class="ghost" id="signUp">Crée un compte</button>
					</div>
				</div>
			</div>
		</div>
		</div>
</body>
</html>


